<h1>Ponds</h1>
<p><a href="/ponds/new" class="btn btn-primary">Create a new pond</a></p>

<div class="card-container">
  <% @ponds.each do |pond| %>
    <div class="card pond-card">
      <a href="/ponds/<%= pond.id %>">
        <img src="https://upload.wikimedia.org/wikipedia/commons/1/1b/Frog_pond.JPG" alt="Pond Picture" height="200" width="300">  
      </a>
      <p><a href="/ponds/<%= pond.id %>"><%= pond.name %></a></p>
    </div>
  <% end %>
</div>